@model Examen.ApplicationCore.Domain.Infirmier

@{
    ViewData["Title"] = "Créer un Infirmier";
}

<style>
    .form-container {
        max-width: 500px;
        margin: 40px auto;
        padding: 30px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #f9f9f9;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    label {
        font-weight: 500;
        margin-bottom: 6px;
    }

    .form-control, .form-select {
        height: 40px;
        font-size: 15px;
    }

    .btn-primary {
        background-color: #0069d9;
        border: none;
        padding: 10px 20px;
    }

    .btn-secondary {
        margin-left: 10px;
        padding: 10px 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }
</style>

<div class="form-container">
    <h2>Créer un Infirmier</h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()


        <div class="form-group">
            <label asp-for="NomComplet">Nom complet</label>
            <input asp-for="NomComplet" class="form-control" />
            <span asp-validation-for="NomComplet" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Specialite">Spécialité</label>
            <select asp-for="Specialite" asp-items="ViewBag.Specialites" class="form-select">
                <option disabled selected>-- Choisir une spécialité --</option>
            </select>
            <span asp-validation-for="Specialite" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LaboratoireId">Laboratoire</label>
            <select asp-for="LaboratoireId" asp-items="ViewBag.Laboratoires" class="form-select">
                <option disabled selected>-- Choisir un laboratoire --</option>
            </select>
            <span asp-validation-for="LaboratoireId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Créer</button>
        <a asp-action="Index" class="btn btn-secondary">Retour</a>
    </form>
</div>
